<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800">

  <h1 class="text-center text-3xl font-bold">Edit Person</h1>

  {{#each person}}
  
  <form action="" method="POST" class="mt-4">
		<div>
			<input type="text" name="lastName" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="Last Name" value="{{lastName}}">
		</div>
		<div>
			<input type="text" name="firstName" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white"  value="{{firstName}}" placeholder="First Name">
		</div>
		<div>
			<input type="text" name="gender" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="Gender" value="{{gender}}">
		</div>
		<div>
			<input type="text" name="dateBirth" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="Date Birth" value="{{dateBirth}}">
		</div>
		<div  class="form-action-buttons">
			<button type="submit" class="rounded-md bg-blue-400 w-full text-lg text-white font-semibold p-2 my-3
      hover:bg-blue-400 focus:bg-blue-400">Update</button>
		</div>
	</form>
  {{/each}}

</div>